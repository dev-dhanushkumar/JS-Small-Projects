---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import SignupForm from "../components/SignupForm.astro";

import { defineMiddleware } from "astro:middleware";
---

<Layout>
  <Navbar />
  <div
    class="h-screen bg-cover bg-center relative bg-no-repeat"
    style="background-image: url(./724631.jpg)"
  >
    <div
      class="inline-flex items-center justify-center p-4 bg-transparent h-full w-full sm:w-auto"
    >
      <div class="h-full w-full sm:min-w-[460px]">
        <div
          class="bg-black/40 backdrop-blur-3xl lg:max-w-[480px] z-10 p-6 relative w-full h-full border-t-4 border-blue-600 rounded-lg"
        >
          <div class="flex flex-col h-full gap-4">
            <div class="mb-8 text-center lg:text-start">
              <a href="#" class="flex justify-center lg:justify-start">
                <img src="./kriyaetive_logo.jpeg" alt="logo" class="h-8" />
              </a>
            </div>
            <div class="my-auto">
              <!-- title-->
              <h4 class="text-white text-2xl font-semibold mb-2">Sign Up</h4>
              <p class="text-gray-100 mb-9">Create an free account !</p>
              <SignupForm>
                <div class="text-center mt-6">
                  <p class="text-base inline-block px-2 py-1 text-gray-100">
                    Already have an account?
                    <a href="#" class="text-white ms-1"><b>Login!</b></a>
                  </p>
                </div>
                <!-- end form-->
              </SignupForm>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
